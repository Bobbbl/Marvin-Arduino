<Window x:Class="TestAnimatedContainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestAnimatedContainer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
    <!--Hauptsteuerelement Row und Column Definitions-->
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!--Linke Seite-->
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <Button Height="50" Click="Button_Click">Add</Button>
        </StackPanel>
        <!--Rechte Seite-->
        <Border Grid.Column="1" BorderThickness="3" BorderBrush="Black">
            <ScrollViewer>
                <Canvas x:Name="canvasFloatingBox">
                </Canvas>
            </ScrollViewer>
        </Border>
        
    </Grid>
</Window>
