<Page x:Class="TestAnimatedContainer.ElatecModulView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestAnimatedContainer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ElatecModulView">

    <!--Hauptkontainer-->
    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <!--Erste Zeile-->
        <Image x:Name="modulImage" Grid.Row="0"></Image>
        <!--Zweite Zeile-->
        <Label x:Name="modulLabelCapabilities" Content="Capabilities" Grid.Row="1"></Label>
        <TextBlock x:Name="modulTextBlockCapabilities" Grid.Row="1"></TextBlock>
        <!--Dritte Zeile-->
        <TextBlock x:Name="modulTextBlockCardData" Grid.Row="2"></TextBlock>
    </Grid>
</Page>
